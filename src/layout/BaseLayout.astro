---
import { NavBar } from '../components/NavBar.tsx';
import { FooterMinimal } from '../components/FooterMinimal.tsx';
import { ScrollSpy } from '../components/utils/ScrollSpy.tsx'; 
import { activeSection } from '../stores/navigationStore';

interface Props {
  activeSectionID?: string;
}
  
const { activeSectionID = 'home' } = Astro.props;
// if(activeSectionID){
//   activeSection.set(activeSectionID);
// }
console.log('NavBar activeSectionID:', activeSectionID);
---

<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Nardoz</title>
  </head>
  <body>
    <div class="bg-background text-foreground">
      
      <NavBar currentPage={activeSectionID} client:load /> 

      <main class="pt-16">
        <slot />
      </main>
      
      <FooterMinimal client:load />
    </div>

    {/* Carica ScrollSpy solo sulla homepage */}
    {Astro.url.pathname === import.meta.env.BASE_URL && <ScrollSpy client:load />}


  </body>
</html>